<div class="container">
  <h1 class="page-title"><%= title %></h1>

  <% if (typeof success !== 'undefined') { %>
    <div class="mb-5 success-message fw-bold text-center">Your message was sent successfully!</div>
  <% } else if (typeof error !== 'undefined') { %>
    <div class="mb-5 error-message fw-bold text-center">An error occurred while sending your message. Please send your message directly to <a href="mailto:alex@alexseifert.com">alex@alexseifert.com</a>.</div>
  <% } %>

  <form method="post" action="/contact" class="contact-form mx-auto mb-5">
    <div class="form-group">
      <label for="name" class="form-label">Name:</label>
      <input type="text" name="name" class="input full-width" required>
    </div>
    <div class="form-group">
      <label for="name" class="form-label">Email:</label>
      <input type="email" name="email" class="input full-width" required>
    </div>
    <div class="form-group">
      <label for="message" class="form-label">Message:</label>
      <textarea name="message" class="input full-width" required rows="10"></textarea>
    </div>

    <button type="submit" class="button primary large">Send</button>
  </form>
</div>
