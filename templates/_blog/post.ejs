<div class="container blog-post">
  <div class="row">
    <div class="col-12 col-lg-8">
      <h1 class="post-title mb-4"><%= title %></h1>

      <div class="post-meta low-opacity-text d-flex gap-2 mb-5">
        <a href="/author/" class="body-color">author</a>
        <span>âˆ™</span>
        <time datetime="<%= metaData.date %>"><%= helpers.formatLocaleDateTime(metaData.date) %></time>
      </div>

      <% if (metaData.titleImage) { %>
        <img src="<%= metaData.titleImage %>" alt="<%= title %>" class="title-image mb-4">
      <% } %>

      <div class="mb-5">
        <%- body %>
      </div>

      <div class="d-flex">
        <div class="post-categories">
          <% if (metaData.categories) { %>
            <% for (const category of metaData.categories) { %>
              <a href="/category/<%= category %>" class="category"><%= category %></a>
            <% } %>
          <% } %>
        </div>
        <div class="post-tags">
          <% if (metaData.tags) { %>
            <%for (const tag of  metaData.tags) { %>
              <a href="/tag/<%= tag %>" class="tag"><%= tag %></a>
            <% } %>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-lg-3 mt-5 mt-lg-0 offset-lg-1">
      <%- include('../_partials/genericSidebar.ejs') %>
    </div>
  </div>
</div>

