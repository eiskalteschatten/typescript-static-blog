<div class="item-tile-small col-12 col-md-6 col-xl-4 d-flex flex-column gap-3 mb-5 mb-md-0">
  <a href="<%= item.link %>/" <% if (item.openInNewTab) { %>target="_blank"<% } %>>
    <% if (item.image) { %>
      <img src="<%= item.image %>" class="item-tile-image" alt="<%= item.title %>" loading="lazy">
    <% } else { %>
      <div class="no-item-tile-title-image">
        <span class="material-icons">article</span>
      </div>
    <% } %>
  </a>

  <h3 class="item-tile-name">
    <a href="<%= item.link %>/" <% if (item.openInNewTab) { %>target="_blank"<% } %>>
      <%= item.title %>
    </a>
  </h3>

  <div class="item-tile-meta low-opacity-text d-flex gap-2">
    <time datetime="<%= item.date %>"><%= helpers.formatLocaleDateTime(item.date) %></time>
  </div>
</div>
